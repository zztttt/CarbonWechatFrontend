<!--搜索框-->
  <view style="position: -webkit-sticky;">
    <van-search value="{{searchValue}}" placeholder="请输入书名" use-action-slot bind:change="onChange" bind:search="onSearch">
    </van-search>
  </view>
<!--跑马灯-->
