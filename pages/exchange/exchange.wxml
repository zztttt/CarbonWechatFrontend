<view>
<!--搜索框-->
  <view style="position: -webkit-sticky;">
    <van-search value="{{searchValue}}" placeholder="请输入物品名" use-action-slot bind:change="onChange" bind:search="onSearch">
    </van-search>
  </view>
<!--跑马灯-->
  <custom-swiper imgUrls="{{carouselImgUrls}}" /> 
<!--广告条-->
  <view class="marquee_container" style="--marqueeWidth--:-12em">
    <view class="marquee_text">----- 开业大酬宾！！！陈老师的学生八折优惠！！！优惠码：CJNB -----</view>
</view>
<!-- 物品 -->
  <view style="display:flex; justify-content:space-around; flex-wrap:wrap; align-items:flex-end">
    <block wx:for-items="{{rewards}}" wx:for-item="reward" wx:key="name">
      <view style="width:9rem; height:12rem;text-align:center; bottom: 100px">
        <van-image bindtap="showRewardDetail" data-reward='{{reward}}' width="9rem" height="9rem" fit="contain" src="http://img3m9.ddimg.cn/12/36/1546133799-1_w_1.jpg" /> 
        <view style="display: flex;flex-direction: column;">
          <text style="font-size:50rpx;">{{reward.name}}</text>
          <text style="color: white;">{{reward.name}}</text>
          <text style="color: white;">{{reward.name}}</text>
          <text style="color: white;">{{reward.name}}</text>
        </view>
        
      </view>
    </block> 
  </view>

